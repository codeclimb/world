rate = 0.17
rate2 = 0.43
print "Enter price (ex tax): "
s = gets

subtotal = s.to_f
tax = subtotal * rate
tax2 = subtotal * rate2
if (subtotal < 100.0) then
	subtotal = s.to_f
else subtotal =1200
	puts "Tax on $#{subtotal} is $#{tax}, so grand total is $#{subtotal+tax}"
  puts "Tax on $#{subtotal} is $#{tax2}, so grand total is $#{subtotal+tax2}"
  
end
